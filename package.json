{
  "name": "Clip2p",
  "version": "1.0.0",
  "description": "Decentralized peer-to-peer file sharing right from your menu bar.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . Clip2p --platform=darwin --version=0.0.1 --out=./dist --overwrite --icon='assets/images/icon.icns'",
    "dmg": "electron-installer-dmg ./dist/Clip2p-darwin-x64/Clip2p.app Clip2p --out=./dist --overwrite --icon='assets/images/icon.icns'"
  },
  "keywords": [
    "decentralized",
    "share",
    "dat",
    "p2p"
  ],
  "author": "Tiago Alves",
  "license": "MIT License",
  "devDependencies": {
    "electron": "~1.7.8",
    "electron-rebuild": "^1.6.0"
  },
  "dependencies": {
    "dat-node": "^3.5.5",
    "fs-extra": "^4.0.2"
  }
}
